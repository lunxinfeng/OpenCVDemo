<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="318dp"
    android:layout_height="339dp"
    android:background="@mipmap/bg_update">

    <Button
        android:id="@+id/btnN"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/update_btn_color"
        android:gravity="center"
        android:text="@string/update_n"
        android:textColor="@drawable/update_text_color_n"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnY"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnY"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/update_btn_color"
        android:gravity="center"
        android:text="@string/update_y"
        android:textColor="@drawable/update_text_color_y"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnN" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="126dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>